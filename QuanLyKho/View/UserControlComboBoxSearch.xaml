<UserControl x:Class="QuanLyKho.View.UserControlComboBoxSearch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyKho.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ComboBox Style="{StaticResource ComboBoxSearchStyle}" Name="MyComboxSearch"
            IsEditable="True"
            ItemsSource="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, 
              Path=ComboBoxSearchItemSource, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
            Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, 
              Path=ComboBoxSearchText, UpdateSourceTrigger=Explicit, Mode=TwoWay}"
            TextBoxBase.TextChanged="ComboBox_TextChanged"
            IsSynchronizedWithCurrentItem="False"
            IsTextSearchEnabled="False"
            IsDropDownOpen="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, 
              Path=ComboBoxSearchIsDropDownOpen, UpdateSourceTrigger=PropertyChanged}"
              DropDownOpened="ComboBox_DropDownOpened"/>
    </Grid>
</UserControl>
