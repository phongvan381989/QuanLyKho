<UserControl x:Class="QuanLyKho.View.UserControlSoThucDuong"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyKho.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox  Name="textBoxSoDuong" Style="{StaticResource TextBoxStyleCode}"
            TextChanged="TextBoxSoDuong_TextChanged"
            ToolTip="Nhập số dương"
            Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, 
            Path=SoThucDuongText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            PreviewKeyUp="TextBoxSoDuong_PreviewKeyUp"
            PreviewMouseLeftButtonUp="TextBoxSoDuong_PreviewMouseLeftButtonUp">
        </TextBox>
    </Grid>
</UserControl>
