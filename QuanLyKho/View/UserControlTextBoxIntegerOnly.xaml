<UserControl x:Class="QuanLyKho.View.UserControlTextBoxIntegerOnly"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyKho.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="MyUserControlTextBoxIntegerOnly">
    <TextBox  Name="textBoxIntegerOnly" Style="{StaticResource TextBoxStyleCode}"
              TextChanged="TextBoxIntegerOnly_TextChanged"
              ToolTip="Nhập số nguyên"
              Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, 
              Path=IntegerText, UpdateSourceTrigger=PropertyChanged}"
              />
</UserControl>
