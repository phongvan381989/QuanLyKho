<UserControl x:Class="QuanLyKho.View.UserControlTienVND"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyKho.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox Name="TextBoxTienVND" Style="{StaticResource TextBoxStyleCode}"
                 ToolTip="Nhập số tiền"
                 TextChanged="TextBoxTienVND_TextChanged"
                 Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, 
                 Path=TienVNDText, UpdateSourceTrigger=PropertyChanged}">
        </TextBox>
    </Grid>
</UserControl>
